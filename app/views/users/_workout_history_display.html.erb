<div class="card card-body">
  <div class="card-header border-top">
    <div class="row justify-content-between">
      <%# <h6> <%= Date.today.strftime("(%A) %d/%b/%Y") %>
      <h5><%= workout.day %> </h5>
      <a class="fas fa-eye" data-toggle="collapse" href="#workout-collapse-<%= workout.id %>" role="button" aria-expanded="false" aria-controls="workout-collapse-<%= workout.id %>"></a>
    </div>
    <div class="collapse multi-collapse" id="workout-collapse-<%= workout.id %>">
      <div class = "border border-dark my-3 p-3 rounded-lg">
        <%= workout.day %>
        <br>
        <% workout.workout_sets.each do |workout_set| %>
        <% end %>
        Notes: <%= workout.mental_state %><br>
        <%# For viewing purposes %>
        <%# Group by date %>
        <%# iterate over the hash Key(date) => value(workouts) %>
        Status: <%= workout.status %><br>
        <% unique_exercises = retrieve_unique_exercises(workout) %>
        <% unique_exercises.each do |exercise| %>
          <%= exercise.name %>:
          <% workout.workout_sets.each do |workout_set| %>
            <% if exercise.id == workout_set.exercise_id  %>
              <span class="badge badge-pill badge-secondary">
                <%= "#{workout_set.weight}kg x #{workout_set.nb_of_reps}" %>
              </span>
            <% end %>
          <% end %>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
