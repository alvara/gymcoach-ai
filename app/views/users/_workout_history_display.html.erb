
<div class="card-header border-top">
  <div class="card mt-1">
    <div class="row justify-content-center">
      <h5 class="row"><%= workout.day%> </h5>
      <a class="fas fa-eye" data-toggle="collapse" href="#workout-collapse-<%= workout.id %>" role="button" aria-expanded="false" aria-controls="workout-collapse-<%= workout.id %>" style="width: 200px; height: 30px; color: black; position: absolute; opacity: 0;">
      </a>
    </div>
    <div class="collapse multi-collapse" id="workout-collapse-<%= workout.id %>">
      <div class = "border border-dark my-1 p-3 rounded-lg">
        <br>
        <% workout.workout_sets.each do |workout_set| %>
        <% end %>
        <% unique_exercises = retrieve_unique_exercises(workout) %>
        <% unique_exercises.each do |exercise| %>
          <%= exercise.name.capitalize %>:
          <% workout.workout_sets.each do |workout_set| %>
            <% if exercise.id == workout_set.exercise_id  %>
              <span class="badge badge-pill badge-secondary">
                <%= "#{workout_set.weight}kg x #{workout_set.nb_of_reps}" %>
                <%# put the weight under the reps?  %>
              </span>
            <% end %>
          <% end %>
          <br>
        <% end %>
        Status: <%= workout.status %><br>
        Notes: <%= workout.mental_state %><br>
      </div>
    </div>
  </div>
</div>
