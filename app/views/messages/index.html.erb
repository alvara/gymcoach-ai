<div class="container-fluid" data-controller="recognize-speech">
  <div class="row justify-content-center">
    <div class="col-md-8 col-xl-6 chat">
      <div class="message-container">
        <div class="card-body msg_card_body">
          <% @messages.each do |message| %>
            <%= render 'chats/message', locals: {
							category: message.category,
							content: (message.content if message.content.present?),
							workout: (message.workout if message.workout.present?), read: (message.read),
							workout_set: (message.workout.workout_sets.first if message.workout.present?),
							created_at: (message.created_at if message.created_at.present?)
						} %>
          <% end %>
        </div>
        <%#experimental please frontend this!!!!!!!!%>
