<%# "LOCALS" will accept following arguments: %>
  <%# category (string) - category of message, correct partial chosen from below %>
  <%# content (string) - text content for messages (receive/send) %>
  <%# workout (instance) - for workout suggestion card to populate %>

<%# Choose correct message partial based on category %>
<% if locals[:category] == 'receive' %>
  <%= render 'chats/message_receive', locals: locals %>

<% elsif locals[:category] == 'send' %>
  <%= render 'chats/message_send', locals: locals %>

<% elsif locals[:category] == 'card_workout' %>
  <%= render 'chats/message_card_workout', locals: locals %>

<% elsif locals[:category] == 'card_workout_set' %>
<%# TODO: category 'card-workout-set' will render a card for a single set %>

<% elsif locals[:category] == 'card_chart' %>
<%# TODO: category 'card-chart' will render a card with chart data on request %>

<% end %>
