<div class="chatFooter" >

  <%= simple_form_for @message, remote: true, html: { class: "", data: { chat_target: 'form' }  } do |f| %>

    <div v class="form-group boxed">
      <div class="input-wrapper">
        <%= f.input :content, 
        placeholder: "Send Message..", 
        as: :string, 
        label: false, 
        input_html: {class: "form-control",
        data: { chat_target: 'input' }}, 
        autofocus: true %>
      </div>
    </div>

    <button type="submit" class="btn btn-icon btn-primary rounded glow" data-action="click->chat#update">
      <i class="fas fa-paper-plane"></i>
    </button>

  <% end %>
</div>
